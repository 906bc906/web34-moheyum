{
  "compilerOptions": {
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "allowJs": false,
    "baseUrl": "./",
    "paths": {
      "@filter": ["./filter"],
      "@modules": ["./src/modules/index"],
      "@modules/*": ["./src/modoules/*"],
      "@decorator": ["./src/decorator/index"],
      "@root": ["./"]
    }
  }
}
